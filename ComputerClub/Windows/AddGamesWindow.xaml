<Window x:Class="ComputerClub.Windows.AddGamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClub.Windows"
        mc:Ignorable="d"
        Title="AddGamesWindow" Height="533" Width="330"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="70,82,70,186">
            <Label Content="Название игры" />
            <TextBox x:Name="game_name"/>
            <Label Content="Жанр"/>
            <TextBox x:Name="game_genre"/>
            <Label Content="Год выхода"/>
            <TextBox x:Name="game_year" />
        </StackPanel>
        <StackPanel Height="51" VerticalAlignment="Top" Margin="0,280,0,0" >
            <Button x:Name="addbutton" Click="addbutton_Click" Content="Добавить" Height="32" FontSize="14" FontFamily="Gill Sans Ultra Bold Condensed" Background="LightPink" Width="131" Style="{DynamicResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
