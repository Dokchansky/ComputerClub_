<Window x:Class="ComputerClub.Windows.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClub.Windows"
        mc:Ignorable="d"
        Title="FeedbackWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="FeedbackGrid" AutoGenerateColumns="False" CanUserResizeColumns="False" IsReadOnly="True" Margin="10,30,141,84">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Комментарий" CanUserReorder="False" Binding="{Binding Comment}"/>
                <DataGridTextColumn Header="Оценка" CanUserReorder="False" Binding="{Binding Rating}"/>
                <DataGridTextColumn Header="Дата отзыва" CanUserReorder="False" Binding="{Binding FeedbackDate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
