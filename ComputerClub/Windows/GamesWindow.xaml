<Window x:Class="ComputerClub.Windows.GamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClub.Windows"
        mc:Ignorable="d"
        Title="GamesWindow" Height="450" Width="800" ResizeMode="NoResize"
WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="524,372,0,-27" HorizontalAlignment="Left">
            <Button Content="Выход" Click="Exit_Click" Height="38" Width="196" Background="LightPink" FontSize="16" FontFamily="Gill Sans Ultra Bold Condensed" Style="{DynamicResource MaterialDesignRaisedButton}"/>
        </StackPanel>
        <DataGrid Margin="10,27,80,86" x:Name="GamesGrid" AutoGenerateColumns="False" CanUserResizeColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" CanUserReorder="False" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Жанр" CanUserReorder="False" Binding="{Binding Genre}"/>
                <DataGridTextColumn Header="Год выпуска" CanUserReorder="False" Binding="{Binding ReleaseYear}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
