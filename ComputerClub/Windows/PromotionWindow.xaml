<Window x:Class="ComputerClub.Windows.PromotionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClub.Windows"
        mc:Ignorable="d"
        Title="PromotionWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Margin="10,27,27,106" x:Name="PromotionGrid" AutoGenerateColumns="False" CanUserResizeColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" CanUserReorder="False" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Процент скидки" CanUserReorder="False" Binding="{Binding DiscountPercentage}"/>
                <DataGridTextColumn Header="Начало акции" CanUserReorder="False" Binding="{Binding StartDate}"/>
                <DataGridTextColumn Header="Конец акции" CanUserReorder="False" Binding="{Binding EndDate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
